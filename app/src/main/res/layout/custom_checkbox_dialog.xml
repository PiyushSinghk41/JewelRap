<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relativecuatom"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/customlinear"
            android:layout_margin="@dimen/layout_margin"
            android:layout_weight="4">
               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:weightSum="5"
                    android:id="@+id/linearSolitaire"

                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_solitairedialog"
                        android:layout_weight="0.5"
                        android:id="@+id/categoryimage"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCategorySolitaire"
                        android:text="Solitaire"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/layout_margin"
                        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                        />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioSolitaire"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:weightSum="5"
                    android:id="@+id/linearLooseDiamond"

                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_loosediamonds"
                        android:layout_weight="0.5"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCategoryLooseDiamond"
                        android:text="Loose Diamonds"
                        android:layout_weight="4"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_gravity="center_vertical"
                        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                        />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/radioLooseDiamond"
                        android:clickable="false"
                        />

                </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:weightSum="5"
                android:id="@+id/linearDiamondJewellery"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_diamondjewellery"
                    android:layout_weight="0.5"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCategoryDJ"
                    android:text="Diamond Jewellery"
                    android:layout_weight="4"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                    />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/radioDJ"
                    android:clickable="false"
                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:weightSum="5"
                    android:id="@+id/linearGoldJewellery"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_goldjewellery"
                        android:layout_weight="0.5"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCategoryGJ"
                        android:text="Gold Jewellery"
                        android:layout_weight="4"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_gravity="center_vertical"
                        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                        />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/radioGJ"
                        android:clickable="false"
                        />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:weightSum="5"
                android:id="@+id/linearSilver"

                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_silver"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCategorySilver"
                    android:text="Silver"
                    android:layout_weight="4"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                    />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/radioSilver"
                    android:clickable="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:weightSum="5"
                android:id="@+id/linearColorStone"


                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_colorstone"
                    android:layout_weight="0.5"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCategoryColorstone"
                    android:text="Color Stone"
                    android:layout_weight="4"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                    />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/radioColorstone"
                    android:clickable="false"
                    />

            </LinearLayout>
          <!--  </RadioGroup>-->
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonok"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="SUBMIT"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_gravity="bottom|end"

            />
    </LinearLayout>

</RelativeLayout>