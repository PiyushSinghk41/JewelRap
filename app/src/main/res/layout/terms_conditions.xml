<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="25dp">

    <TextView android:id="@+id/textViewJewelRap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:text="JewelRap"
        android:gravity="center"
        android:textSize="@dimen/carbon_toolbarTextSize"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
   <RelativeLayout
       android:layout_below="@+id/textViewJewelRap"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/relativeLayouttnc"
       android:layout_margin="10dp"
       android:gravity="center">

       <TextView
           android:id="@+id/textViewtnc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/terms_conditions"
           android:gravity="center"
           />

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="25dp"
        android:layout_below="@+id/relativeLayouttnc">

        <Button
            android:id="@+id/buttontnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:text="I Agree"
            android:layout_marginLeft="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/buttontnccancel"
            />

        <Button
            android:id="@+id/buttontnccancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            />

    </RelativeLayout>


</RelativeLayout>