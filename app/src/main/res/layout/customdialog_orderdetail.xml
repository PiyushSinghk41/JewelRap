<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="20sp">
    <TextView
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:padding="10sp"
        android:textColor="@color/white"
        android:text="YOUR ORDER DETAILS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        >
    <TextView
        android:id="@+id/orderdialog_category"
        android:background="@drawable/button_border"
        android:padding="10sp"
        android:text="CATEGORY : "
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/orderdialog_shape"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="SHAPE : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/orderdialog_size"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="SIZE : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/orderdialog_certification"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="CERTIFICATION : "
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/orderdialog_color"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="COLOR : "
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/orderdialog_purity"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="PURITY : "
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/orderdialog_price"
            android:textColor="@color/Black"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="PRICE : "
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/orderdialog_description"
            android:textColor="@color/Black"
            android:background="@drawable/button_border"
            android:padding="10sp"
            android:text="DESCRIPTION : "

            android:lines="3"
            android:maxLines="100"
            android:gravity="top"
            android:inputType="textMultiLine|textImeMultiLine"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp">
            <Button
                android:id="@+id/buttoncancel"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:layout_marginLeft="5sp"
                android:id="@+id/buttonPlaceOrder"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Place Order"
                android:textColor="@color/white" />
        </TableRow>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
