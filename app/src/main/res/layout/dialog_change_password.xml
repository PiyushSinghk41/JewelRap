<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/text_item_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_margin"
        >

        <EditText
            android:id="@+id/et_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old password"
            android:padding="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_5dp"
            android:inputType="textPassword"
            android:fontFamily="defult"
            />
        <EditText
            android:id="@+id/et_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:padding="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_5dp"
            android:inputType="textPassword"
            android:fontFamily="defult"
            />
        <EditText
            android:id="@+id/et_rePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-password"
            android:padding="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_5dp"
            android:inputType="textPassword"
            android:fontFamily="defult"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_order_dialog"
            android:weightSum="5">



            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/ripple"
                android:text="Submit"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/ripple"
                android:text="Cancel"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/layout_margin_5dp"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
